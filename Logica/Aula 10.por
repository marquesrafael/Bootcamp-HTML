programa {
	funcao inicio() {
	    inteiro contador = 0
	    inteiro total = 3
	    cadeia frutas[4]
	    
	    frutas[0] = "Maçã"
	    frutas[1] = "Pera"
	    frutas[2] = "Uva"
	    frutas[3] = "Jaca"
	    
	    faca{
	        escreva(frutas[contador])
	        escreva("\n")
	        contador++
	    } enquanto(contador <= total)
	}
}
